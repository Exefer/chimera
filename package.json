{
  "name": "chimera",
  "version": "0.1.0",
  "description": "Chimera is a game launcher made with Tauri and SvelteKit",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri",
    "format": "prettier --write . && cargo fmt --manifest-path ./src-tauri/Cargo.toml",
    "format:check": "prettier --check . && cargo fmt --manifest-path ./src-tauri/Cargo.toml -- --check",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "license": "MIT",
  "dependencies": {
    "@leeoniya/ufuzzy": "^1.0.17",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-http": "~2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-store": "~2",
    "bits-ui": "^1.0.0-next.78",
    "date-fns": "^4.1.0",
    "ky": "^1.7.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@fontsource-variable/inter": "^5.1.1",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.15.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "@types/node": "^22.10.10",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "formsnap": "^2.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "lucide-svelte": "^0.474.0",
    "mode-watcher": "^0.5.0",
    "prettier": "^3.3.2",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "svelte": "5.19.0",
    "svelte-check": "^4.0.0",
    "svelte-i18n": "^4.0.1",
    "svelte-sonner": "^0.3.28",
    "sveltekit-superforms": "^2.23.1",
    "tailwind-merge": "^2.6.0",
    "tailwind-variants": "^0.3.0",
    "tailwindcss": "^3.4.9",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.6.2",
    "vite": "^6.0.7"
  },
  "lint-staged": {
    "*.{js,ts,json,svelte,md,css}": [
      "prettier --write"
    ],
    "*.rs": [
      "rustfmt --edition 2021"
    ]
  }
}
